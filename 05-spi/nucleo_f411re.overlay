&spi1 {
	pinctrl-0 = <&spi1_sck_pa5
		     &spi1_miso_pa6 &spi1_mosi_pa7>;
	pinctrl-names = "default";
    cs-gpios = <&gpioa 4 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
	status = "okay";

    encspi: encspi@0 {
        compatible = "vnd,spi-device"; //vnd: vendor definition
        reg = <0>;
        spi-max-frequency = <2000000>;
        label = "encSpi";
    };
};